@page "/addcar"


@layout MainLayout
@inherits FirmaCurierat.Pages.AddCarComponent

@using Radzen
@using Radzen.Blazor
@using Syncfusion.Blazor.Grids
@using Radzen.Blazor
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Cards

@using Syncfusion.Blazor
@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Notifications

<Syncfusion.Blazor.Cards.SfCard>






    <div style="margin-bottom: 1rem" class="row">
        <div class="col-md-3">
            <RadzenLabel Component="Nume" style="font-weight: bold; font-size: medium;" Text="Brand">
            </RadzenLabel>
        </div>
        <div class="col-md-8" style="margin-left:-100px;">
            <RadzenTextBox MaxLength="255" style="width: 380px" @bind-Value="@(marca)" Name="name">
            </RadzenTextBox>

        </div>
    </div>
    <div style="margin-bottom: 1rem" class="row">
        <div class="col-md-3">
            <RadzenLabel Component="surname" style="font-weight: bold; font-size: medium;" Text="Year">
            </RadzenLabel>
        </div>
        <div class="col-md-8" style="margin-left:-100px;">
            <RadzenNumeric TValue="int" Min="2000" Max="2022" @bind-Value="@an" />

        </div>
    </div>
    <div style="margin-bottom: 1rem" class="row">
        <div class="col-md-auto align-items-center d-flex" style="margin-right:-5px; margin-left:150px;">
            <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="insert" Click="@insertCar">
            </RadzenButton>
        </div>
       
    </div>

</Syncfusion.Blazor.Cards.SfCard>
