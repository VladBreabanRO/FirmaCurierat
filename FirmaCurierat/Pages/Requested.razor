@page "/view-order-values"

@layout MainLayout
@inherits FirmaCurierat.Pages.RequestedComponent

@using Radzen
@using Radzen.Blazor
@using Syncfusion.Blazor.Grids
@using Radzen.Blazor

@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Notifications

<Syncfusion.Blazor.Cards.SfCard>



    <SfGrid DataSource="interestList" ShowColumnChooser="true" AllowSorting="true" AllowResizing="true" AllowPaging="true"
            AllowSelection="true">

        <GridEvents TValue="infoForTheGrid"></GridEvents>
        <GridPageSettings PageCount="6" PageSize="5"></GridPageSettings>

        <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Single"></GridSelectionSettings>

        <GridColumns>
            <GridColumn Field=@nameof(infoForTheGrid.nume) AutoFit="true" HeaderText="Client Name" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
            <GridColumn Field=@nameof(infoForTheGrid.awb) AutoFit="true" HeaderText="AWB" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
            <GridColumn Field=@nameof(infoForTheGrid.valoare_comanda) AutoFit="true" HeaderText="Value" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>

        </GridColumns>
    </SfGrid>
</Syncfusion.Blazor.Cards.SfCard>
<Syncfusion.Blazor.Cards.SfCard>

    <h5 style="font-weight:bold; font-family:Castellar; font-size:large;">Lucky cars</h5>

    <SfGrid DataSource="interestList2" ShowColumnChooser="true" AllowSorting="true" AllowResizing="true" AllowPaging="true"
            AllowSelection="true">

        <GridEvents TValue="infoForTheGrid2"></GridEvents>
        <GridPageSettings PageCount="6" PageSize="5"></GridPageSettings>

        <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Single"></GridSelectionSettings>

        <GridColumns>
            <GridColumn Field=@nameof(infoForTheGrid2.marca) AutoFit="true" HeaderText="Brand" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
            <GridColumn Field=@nameof(infoForTheGrid2.valoare_comanda) AutoFit="true" HeaderText="Order Value" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>


        </GridColumns>
    </SfGrid>
</Syncfusion.Blazor.Cards.SfCard>
