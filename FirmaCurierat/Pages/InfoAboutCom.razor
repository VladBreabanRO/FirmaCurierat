@page "/infoaboutcom/{awb}"
@layout LoginLayout
@using Radzen
@using Radzen.Blazor
@using Syncfusion.Blazor.Grids
@using Radzen.Blazor

@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Notifications
@inherits FirmaCurierat.Pages.InfoAboutComComponent



    <h3 style="font-weight:bold; font-family:Castellar; font-size:large;">There is your order summary</h3>


    <Syncfusion.Blazor.Cards.SfCard>



        <SfGrid DataSource="interestList" ShowColumnChooser="true" AllowSorting="true" AllowResizing="true" AllowPaging="true"
                AllowSelection="true">

            <GridEvents TValue="infoForTheGrid"></GridEvents>
            <GridPageSettings PageCount="6" PageSize="5"></GridPageSettings>

            <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Single"></GridSelectionSettings>

            <GridColumns>
                <GridColumn Field=@nameof(infoForTheGrid.nume_dispecer) AutoFit="true" HeaderText="Caretaker" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
                <GridColumn Field=@nameof(infoForTheGrid.data_livrare) AutoFit="true" HeaderText="Delivery date" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>
                <GridColumn Field=@nameof(infoForTheGrid.valoare_comanda) AutoFit="true" HeaderText="Order value" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="120"></GridColumn>

            </GridColumns>
        </SfGrid>
        <CardFooter>
            <CardFooterContent>
                <div style="margin-bottom: 1rem" class="row">
                    <div class="col-md-auto align-items-center d-flex" style="margin-right:-5px; margin-left:150px;">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="Log out" Click="@logOut">
                        </RadzenButton>
                    </div>

                </div>

            </CardFooterContent>
        </CardFooter>
    </Syncfusion.Blazor.Cards.SfCard>
<style>
    .center-screen {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        min-height: 100vh;
    }
</style>
